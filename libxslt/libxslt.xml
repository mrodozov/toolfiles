  <lib name="xslt"/>
  <client>
    <environment name="LIBXSLT_BASE" default="@TOOL_ROOT@"/>
    <environment name="LIBDIR" default="$LIBXSLT_BASE/lib"/>
    <environment name="INCLUDE" default="$LIBXSLT_BASE/include/libxslt"/>
  </client>
</tool>
