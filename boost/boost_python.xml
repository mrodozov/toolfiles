  <lib name="@BOOST_PYTHON_LIB@"/>
  <client>
    <environment name="BOOST_PYTHON_BASE" default="@TOOL_ROOT@"/>
    <environment name="LIBDIR" default="$BOOST_PYTHON_BASE/lib"/>
  </client>
  <use name="boost_header"/>
  <use name="python"/>
</tool>
